@foreach (var n in Model)
{
     <div style="border:1px solid #BBBBBB;height: 280px;width: 150px;float: left;margin-left: 7px;margin-top: 10px;"> 
                <a ><img src="~/Uploads/@n.ImagePath"  alt="no img" height="120" width="100"/></a>
                <div style="padding-top: 4px;padding-left: 12px;font-family: Calibri;font-size: 18px">  
                    <span><a>@n.Name</a></span>
                    <span style="margin-left: 10px;color: green;font-size: 16px">Rs. @n.Amount </span>
                 
                    @using (Html.BeginForm("Add", "Customer", FormMethod.Post))
                    {
                     @Html.Hidden("id", @n.PId);
