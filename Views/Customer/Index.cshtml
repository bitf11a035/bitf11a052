<div>
    <div id="d1" style="float: left;margin-left:7px; border: 0px solid #BBBBBB;width: 60%">
        <h3 style="color:#000;margin-left: 2% ;font-family: 'Comic Sans MS'; font-weight: bold">Products</h3>

<!--Displaying all the itens from database--> 
  @foreach(var m in Model){
           <div style="border:1px solid #BBBBBB;height: 280px;width: 150px;float: left;margin-left: 7px;margin-top: 10px;"> 
                <a ><img src="~/Uploads/@m.ImagePath" alt="no img" height="120" width="100"/></a>
                <div style="padding-top: 4px;padding-left: 12px;font-family: Calibri;font-size: 18px">  
                    <span><a>@m.Name</a></span>

                    <span style="margin-left: 10px;color: green;font-size: 16px">Rs. @m.Amount </span>
              
                    @using (Html.BeginForm("Add", "Customer", FormMethod.Post))
                    {
                        @Html.Hidden("id", @m.PId);
                        <p>Enter Quantity: <input type="text" name="quantity" id="quantity" /></p>
                    <input type="submit" value="AddtoCart" style="margin-left: 10px;color: green;font-size: 16px"></input>
                    }
                        </div>
           </div>
        }
</div> 
    </div> 
