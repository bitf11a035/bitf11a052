 }
@foreach (var n in ViewBag.X)
{
     <div style="border:1px solid #BBBBBB;height: 250px;width: 180px;float: left;margin-left: 7px;margin-top: 10px;"> 
                <a ><img src="~/Uploads/@n.ImagePath"  alt="no img" height="120" width="100"/></a>
                <div style="padding-top: 4px;padding-left: 12px;font-family: Calibri;font-size: 18px">  
                    <span><a>ProductId: @n.PId</a></span><br />
                    <span><a>Name: @n.Name</a></span><br />
                    <span style="margin-left: 10px;color: green;font-size: 16px">Rs. @n.Amount </span>
                    <br/><span style="margin-left: 10px;color: green;font-size: 16px">Quantity: @n.Quantity </span>
                    <br/>@Html.ActionLink("Delete", "DeleteProduct" ,new{Id=n.PId})
                </div>
           </div>
}
