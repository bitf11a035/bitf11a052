</script>
 @section tabs{
     <div id="menu">
		<ul>
			<li><a href="/Customer/Index">Home</a></li>
            <li><a href="/Customer/ViewCart">ViewCart</a></li>
            <li><a href="/Customer/CheckOut">CheckOut</a></li>
